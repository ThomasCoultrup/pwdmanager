import tkinter as tk
from tkinter import filedialog, Text
import os

def clear_text_box():
  #clear any text in the text fields
  text_box.delete(1.0, tk.END)
  window.title("Password Manager")

def open_file():
  #open a file to read/edit
  filepath = filedialog.askopenfilename(
    filetypes=[("Text Files", "*.txt"), ("All Files", "*.*")]
    
    if not filepath:
    	return
    
    #change this to clear entry for username and password
    clear_text_box()
    with open(filepath, "r") as input_file:
    	text = input_file.read()
    	text_box.insert(tk.END, text)
    
    window.title(f"Password Manager - {filepath}")

def save_file_as():
  #save the current file as a new file
  filepath = filedialog.asksaveasfilename(
    defaultextension=".txt",
    filetypes=[("Text File", "*.txt")]
  )
  
  if not filepath:
    return
  
  with open(filepath, "w") as output_file:
    text = text_box.get(1.0, tk.END)
    output_file.write(text)
    
  window.title(f"Password Manager - {filepath}")
  
  
window = tk.Tk()
window.title("Password Manager")
window.geometry("800x800")

button_frame = tk.Frame(master=window, width=50)
button_frame["relief"] = tk.GROOVE
button_frame["borderwidth"] = 2
button-frame.pack(side=tk.LEFT, fill=tk.Y)

canvas = tk.Canvas(window, height=700, width=700, bg="#000000")
greeting = tk.Label(text="Welcome to Password Manager")
greeting.pack()
canvas.pack()


username = tk.Text(window, height=1, width=30)
username.pack()
userfield = "Username"
username.insert(tk.END, userfield)

password = tk.Text(window, height=1, width=30)
password.pack()
pwdfield = "Password"
password.insert(tk.END, pwdfield)


open_button = tk.Button(master=button_frame)
open_button["text"] = "Open"
open_button.pack(fill=tk.x, padx=5, pady=5)

save_as_button = tk.Button(master=button_frame)
save_as_button =["text"] = "Save As..."
save_as_button.pack(fill=tk.x, padx=5, pady=5)

#put clear button here


clear_button["command"] = clear_text_box
open_button["command"] = open_file
save_as_button["command"] = save_file_as

window.mainloop()
